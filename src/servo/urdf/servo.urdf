<robot name="servo">

    <link name="body">
      <inertial>
        <mass value="1"/>
        <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        <origin/>
      </inertial>

      <visual>
        <origin xyz="0 0 0"/>
        <geometry>
          <box size=".40 .20 .38" />
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0" />
        <geometry>
          <box size=".40 .20 .38" />
        </geometry>
        <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
      </collision>
    </link>

    <link name="horn">
      <inertial>
        <mass value="1"/>
        <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        <origin/>
      </inertial>

      <visual>
        <geometry>
          <box size=".40 .05 .01" />
        </geometry>
        <material name="white">
            <color rgba = "1 1 1 1"/>
        </material>
      </visual>

      <collision>
        <origin/>
        <geometry>
          <box size=".40 .05 .01" />
        </geometry>
        <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
      </collision>
    </link>

    <joint name="swivel" type="continuous">
      <origin xyz="0.15 0 0.4" />
      <axis xyz="0 0 1" />
      <parent link="body"/>
      <child link="horn"/>
    </joint>

</robot>
