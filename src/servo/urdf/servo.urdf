<robot name="servo">

    <link name="body">
      <inertial>
        <mass value="1"/>
        <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        <origin/>
      </inertial>

      <visual>
        <origin xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://servo/meshes/Servo.stl"/>
        </geometry>
        <material name="dark_grey">
            <color rgba="0.2 0.2 0.2 1"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0" />
        <geometry>
          <box size=".040 .020 .038" />
        </geometry>
        <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
      </collision>
    </link>

    <link name="horn">
      <inertial>
        <mass value="1"/>
        <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
        <origin/>
      </inertial>

      <visual>
        <origin xyz="-0.015 0 0" />
        <geometry>
          <mesh filename="package://servo/meshes/ServoHorn.stl"/>
        </geometry>
        <material name="light_grey">
            <color rgba = "0.8 0.8 0.8 1"/>
        </material>
      </visual>

      <collision>
        <origin xyz="-0.015 0 0" />
        <geometry>
          <box size=".040 .005 .001" />
        </geometry>
        <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
      </collision>
    </link>

    <joint name="swivel" type="continuous">
      <origin xyz="-0.015 0 0.02" />
      <axis xyz="0 0 1" />
      <parent link="body"/>
      <child link="horn"/>
    </joint>

</robot>
